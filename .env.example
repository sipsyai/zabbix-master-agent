# Zabbix API Configuration Template
# Copy this file to .env and fill in your actual credentials

# Zabbix Server URL (including protocol and API endpoint)
ZABBIX_API_URL=http://YOUR_ZABBIX_IP/api_jsonrpc.php

# Zabbix Server IP/Hostname
ZABBIX_SERVER=YOUR_ZABBIX_IP

# Zabbix Authentication Credentials
ZABBIX_USERNAME=Admin
ZABBIX_PASSWORD=your_password_here

# Optional: API Token (if using token-based authentication instead of user/pass)
# ZABBIX_API_TOKEN=your_api_token_here

# Optional: Zabbix Server Port (default: 80 for HTTP, 443 for HTTPS)
ZABBIX_PORT=80

# Optional: SSL/TLS Configuration
ZABBIX_USE_SSL=false
# ZABBIX_VERIFY_SSL=true

# Optional: Timeout settings (in seconds)
ZABBIX_TIMEOUT=30
